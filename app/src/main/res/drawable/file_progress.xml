<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/progress_background_color" />
            <corners
                android:bottomRightRadius="@dimen/progress_radius"
                android:bottomLeftRadius="@dimen/progress_radius"
                android:topLeftRadius="@dimen/progress_radius"
                android:topRightRadius="@dimen/progress_radius" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="horizontal"
            android:gravity="left">
            <shape>
                <solid android:color="@color/progress_fore_color" />
                <corners
                    android:bottomRightRadius="@dimen/progress_radius"
                    android:bottomLeftRadius="@dimen/progress_radius"
                    android:topLeftRadius="@dimen/progress_radius"
                    android:topRightRadius="@dimen/progress_radius" />
            </shape>
        </clip>
    </item>
</layer-list>