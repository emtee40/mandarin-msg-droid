<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tomclaw.mandarin"
    android:installLocation="auto">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.NFC"/>
    <uses-feature android:name="android.hardware.nfc" android:required="false"/>
    <application android:name=".main.Mandarin" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/Theme.Mandarin.Light"
        android:allowBackup="true">
        <meta-data android:name="net.hockeyapp.android.appIdentifier" android:value="${HOCKEYAPP_APP_ID}" />
        <activity android:name="net.hockeyapp.android.UpdateActivity"/>
        <receiver android:name=".core.BootCompletedReceiver" android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>
        <service android:name=".core.CoreService"
            android:label="@string/core_service"/>
        <activity android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/com.tomclaw.mandarin"/>
            </intent-filter>
        </activity>
        <activity android:name=".main.RosterActivity"
            android:label="@string/select_buddy"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.SearchActivity"
            android:label="@string/search_buddy"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.SearchResultActivity"
            android:label="@string/search_result"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.AccountInfoActivity"
            android:label="@string/app_name"
            android:windowActionBarOverlay="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.BuddyInfoActivity"
            android:label="@string/app_name"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.icq.IcqEditUserInfoActivity"
            android:label="@string/app_name"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity android:name=".main.icq.IntroActivity"
            android:label="@string/app_name"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.icq.PlainLoginActivity"
            android:theme="@style/Theme.Mandarin.Intro"
            android:label="@string/plain_login"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible"/>
        <activity android:name=".main.icq.PhoneLoginActivity"
            android:theme="@style/Theme.Mandarin.Intro"
            android:label="@string/app_name"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible"/>
        <activity android:name=".main.icq.SmsCodeActivity"
            android:theme="@style/Theme.Mandarin.Intro"
            android:label="@string/app_name"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible"/>
        <activity android:name=".main.icq.CountryCodeActivity"
            android:label="@string/select_country"
            android:windowActionBarOverlay="true"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.ChatActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowActionBarOverlay="true"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.SettingsActivity"
            android:label="@string/settings"
            android:windowActionBarOverlay="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.AboutActivity"
            android:label="@string/info"
            android:windowActionBarOverlay="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name=".main.PhotoPickerActivity"
            android:label="@string/gallery"
            android:windowActionBarOverlay="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.PhotoViewerActivity"
            android:label="@string/gallery"
            android:windowActionBarOverlay="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.DocumentPickerActivity"
            android:label="@string/select_file"
            android:windowActionBarOverlay="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".main.SharingActivity"
            android:label="@string/select_buddy"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND"/>
                <action android:name="android.intent.action.SEND_MULTIPLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND"/>
                <action android:name="android.intent.action.SEND_MULTIPLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="image/*"/>
            </intent-filter>
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND"/>
                <action android:name="android.intent.action.SEND_MULTIPLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="video/*"/>
            </intent-filter>
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND"/>
                <action android:name="android.intent.action.SEND_MULTIPLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="audio/*"/>
            </intent-filter>
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND"/>
                <action android:name="android.intent.action.SEND_MULTIPLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/*"/>
            </intent-filter>
        </activity>
        <provider android:name=".core.GlobalProvider"
            android:authorities="com.tomclaw.mandarin.core.GlobalProvider"
            android:exported="false" android:grantUriPermissions="true"/>
    </application>
</manifest>
