<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tomclaw.mandarin"
          android:versionCode="11"
          android:versionName="1.0"
          android:installLocation="auto">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="14"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application android:name=".main.Mandarin" android:label="@string/app_name"
                 android:icon="@drawable/ic_launcher" android:theme="@style/Theme.Mandarin"
                 android:allowBackup="true">
        <receiver android:name=".core.BootCompletedReceiver" android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>
        <service android:name=".core.CoreService" android:process=":remote"
                 android:label="@string/core_service"/>
        <activity android:name=".main.MainActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTop"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".main.RosterActivity"
                  android:label="@string/select_buddy"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.AccountsActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.AccountInfoActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:windowSoftInputMode="stateAlwaysHidden"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.BuddyInfoActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.AccountAddActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.ChatActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTop"
                  android:windowActionBarOverlay="true"
                  android:windowSoftInputMode="adjustResize|stateHidden"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.SettingsActivity"
                  android:label="@string/settings"
                  android:windowActionBarOverlay="true"
                  android:windowSoftInputMode="adjustResize"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.AboutActivity"
                  android:label="@string/info"
                  android:windowActionBarOverlay="true"
                  android:windowSoftInputMode="adjustResize"
                  android:configChanges="orientation|screenSize">
        </activity>
        <provider android:name=".core.GlobalProvider"
                  android:authorities="com.tomclaw.mandarin.core.GlobalProvider"
                  android:exported="false">
        </provider>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="b94d613b9e798ff9e854d315043fd0f9caf32355"/>
    </application>
</manifest>
