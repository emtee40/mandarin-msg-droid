<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tomclaw.mandarin"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application android:name=".main.Mandarin" android:label="@string/app_name"
                 android:icon="@drawable/ic_launcher" android:theme="@style/Theme.Mandarin">
        <service android:name=".core.CoreService" android:process=":remote"/>
        <activity android:name=".main.MainActivity"
                  android:label="@string/dialogs"
                  android:windowActionBarOverlay="true"
                  android:launchMode="singleTask"
                  android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".main.RosterActivity"
                  android:label="@string/select_buddy"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.AccountsActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.StatusActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.SummaryActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.AccountAddActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".main.ChatActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:windowSoftInputMode="adjustResize"
                  android:configChanges="orientation|screenSize">
        </activity>
        <provider android:name=".core.GlobalProvider"
                  android:authorities="com.tomclaw.mandarin.core.GlobalProvider"
                  android:exported="false">
        </provider>
    </application>
</manifest>
