<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tomclaw.mandarin"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:theme="@style/Theme.Mandarin">
        <service android:name=".core.CoreService" android:process=":remote"/>
        <service android:name=".core.accounts.AccountService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"></action>
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator"
                       android:resource="@xml/authenticator">
            </meta-data>
        </service>
        <activity android:name=".main.MainActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:launchMode="singleTask"
                  android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".main.AccountsActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:launchMode="singleTask"
                  android:configChanges="orientation">
        </activity>
        <activity android:name=".main.StatusActitvity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation">
        </activity>
        <activity android:name=".main.SummaryActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation">
        </activity>
        <activity android:name=".main.AccountAddActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:configChanges="orientation">
        </activity>
        <activity android:name=".main.ChatActivity"
                  android:label="@string/app_name"
                  android:windowActionBarOverlay="true"
                  android:windowSoftInputMode="adjustResize"
                  android:configChanges="orientation">
        </activity>
        <provider android:name=".core.GlobalProvider"
                  android:authorities="com.tomclaw.mandarin.core.GlobalProvider"
                  android:exported="false">
        </provider>
    </application>
</manifest>
