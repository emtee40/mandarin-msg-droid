<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="@string/pref_buddy_list_title"
            android:key="pref_buddy_list_settings">
        <CheckBoxPreference
                android:key="pref_show_online"
                android:summary="@string/pref_summary_show_online"
                android:title="@string/pref_title_show_online"
                android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory
            android:title="@string/pref_notifications_title"
            android:key="pref_notification_settings">
        <CheckBoxPreference
                android:key="pref_system_notifications"
                android:disableDependentsState="true"
                android:title="@string/pref_title_system_notifications"
                android:summary="@string/pref_summary_system_notifications"
                android:defaultValue="true"/>
        <RingtonePreference
                android:dependency="pref_system_notifications"
                android:summary="@string/pref_summary_notification_sound"
                android:title="@string/pref_title_notification_sound"
                android:key="pref_notification_sound"/>
        <CheckBoxPreference
                android:dependency="pref_system_notifications"
                android:key="pref_vibrate"
                android:title="@string/pref_title_vibrate"
                android:defaultValue="false"/>
    </PreferenceCategory>
</PreferenceScreen>