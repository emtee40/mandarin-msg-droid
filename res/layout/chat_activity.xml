<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/Toolbar.Theme">
        <include layout="@layout/chat_toolbar_layout"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chat_root">

        <com.tomclaw.mandarin.main.ChatListView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:paddingBottom="10dp"
                android:clipToPadding="false"
                android:id="@+id/chat_list"
                android:dividerHeight="0dp" android:fastScrollEnabled="false"
                android:divider="@android:color/transparent"
                android:transcriptMode="normal" android:stackFromBottom="true"
                android:layout_weight="1" android:choiceMode="multipleChoiceModal"/>
        <View android:background="?attr/chat_separator"
              android:layout_width="match_parent"
              android:layout_height="1px"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/chat_input_background"
                android:baselineAligned="false">
            <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:id="@+id/smileys_button"
                    android:layout_gravity="center_horizontal|bottom"
                    android:src="@drawable/ic_insert_emoticon"
                    android:tint="?chat_buttons_tint"
                    style="?android:attr/borderlessButtonStyle"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/message_text"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/enter_your_message"
                    android:background="@drawable/chat_edit_background"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:inputType="textCapSentences|textMultiLine"
                    android:ems="10"
                    android:maxLines="4"
                    android:textSize="17sp"
                    android:imeOptions="flagNoExtractUi"
                    android:minHeight="32dp"/>
            <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:id="@+id/send_button"
                    android:layout_gravity="center_horizontal|bottom"
                    android:src="@drawable/ic_send"
                    android:tint="?chat_buttons_tint"
                    style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/smileys_footer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/init_keyboard_height"
                android:background="@android:color/transparent"
                android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>