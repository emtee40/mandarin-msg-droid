<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chat_root">
    <com.tomclaw.mandarin.main.ChatListView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:id="@+id/chat_list"
            android:dividerHeight="0dp" android:fastScrollEnabled="false"
            android:divider="@android:color/transparent"
            android:transcriptMode="normal" android:stackFromBottom="true"
            android:layout_weight="1" android:choiceMode="multipleChoiceModal"/>
    <View android:id="@+id/separator"
          android:background="?attr/chat_separator"
          android:layout_width="match_parent"
          android:layout_height="1px"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/chat_input_background">
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/smileys_button"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingLeft="7dp"
                android:src="@drawable/icon_smiley"
                android:tint="?chat_icons_tint"
                style="?android:attr/borderlessButtonStyle"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/message_text"
                android:hint="@string/enter_your_message"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:inputType="textCapSentences|textMultiLine"
                android:ems="10"
                android:maxLines="3"
                android:imeOptions="flagNoExtractUi"
                android:minHeight="45dp"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/send_button"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingRight="7dp"
                android:src="@drawable/social_send_now"
                android:tint="?chat_icons_tint"
                style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/smileys_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/init_keyboard_height"
            android:background="@android:color/transparent"
            android:visibility="gone"/>
</LinearLayout>