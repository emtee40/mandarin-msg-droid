<?xml version="1.0" encoding="utf-8"?>

<com.tomclaw.mandarin.main.views.history.outgoing.OutgoingImageView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:mandarin="http://schemas.android.com/apk/res/com.tomclaw.mandarin"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center_vertical"
              android:background="?android:attr/activatedBackgroundIndicator" android:paddingLeft="5dp"
              android:paddingTop="5dp" android:paddingRight="5dp"
              android:descendantFocusability="blocksDescendants">
    <include layout="@layout/chat_item_date"/>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:baselineAligned="false">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="right">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/out_time"
                      android:layout_gravity="right"
                      android:textColor="?chat_time_color"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/message_delivery"
                    android:src="@drawable/ic_delivered"
                    android:tint="?chat_icons_tint"
                    android:layout_marginTop="6dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:paddingLeft="5dp"
                      android:paddingRight="0dp">
            <RelativeLayout android:orientation="vertical"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="?attr/chat_out_bubble"
                         android:id="@+id/out_bubble_back"
                         android:layout_gravity="right">
                <com.tomclaw.mandarin.main.views.PreviewImageView
                        android:id="@+id/out_preview_image"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/preview_height"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        mandarin:preview_placeholder_tint="?attr/chat_placeholder_tint_out"/>
                <ImageView
                        android:id="@+id/out_image_overlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/out_preview_image"
                        android:layout_alignStart="@+id/out_preview_image"
                        android:layout_alignRight="@+id/out_preview_image"
                        android:layout_alignEnd="@+id/out_preview_image"
                        android:layout_alignTop="@+id/out_preview_image"
                        android:layout_alignBottom="@+id/out_preview_image"
                        android:scaleType="center"/>
                <LinearLayout
                        android:id="@+id/out_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/out_preview_image"
                        android:layout_alignBottom="@id/out_preview_image"
                        android:layout_alignLeft="@id/out_preview_image"
                        android:layout_alignStart="@id/out_preview_image"
                        android:layout_alignRight="@id/out_preview_image"
                        android:layout_alignEnd="@id/out_preview_image"
                        android:background="@color/failed_preview_tint"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="6dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_action_error"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/out_file_error"
                            android:textColor="@color/out_error_text_color"
                            android:textSize="17sp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"/>
                </LinearLayout>
                <RelativeLayout
                        android:id="@+id/out_progress_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/preview_progress_background"
                        android:layout_alignBottom="@id/out_preview_image"
                        android:layout_alignLeft="@id/out_preview_image"
                        android:layout_alignStart="@id/out_preview_image"
                        android:layout_alignRight="@id/out_preview_image"
                        android:layout_alignEnd="@id/out_preview_image">
                    <TextView
                            android:id="@+id/out_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/file_size_text_color"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-light"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="0dp"/>
                    <ProgressBar
                            android:id="@+id/out_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/out_percent"
                            android:layout_toEndOf="@id/out_percent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:padding="8dp"
                            android:max="100"
                            android:progressDrawable="@drawable/file_progress"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</com.tomclaw.mandarin.main.views.history.outgoing.OutgoingImageView>