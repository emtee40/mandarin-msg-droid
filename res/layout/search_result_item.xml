<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:padding="3dp">
    <LinearLayout android:id="@+id/buddy_container"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:orientation="horizontal">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <QuickContactBadge
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:id="@+id/buddy_badge"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/ic_default_avatar"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buddy_nick"
                    android:layout_gravity="left|center_vertical"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buddy_short_info"
                    android:layout_gravity="left|center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/online_indicator"
                    android:text="@string/status_online"
                    android:gravity="center"
                    android:background="@drawable/green_indicator"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-light"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:id="@+id/button_layout">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_buddy_add"
                android:padding="2dp"
                android:layout_margin="6dp"
                android:background="@drawable/button_selector"
                android:textColor="#ffffff"
                android:gravity="center"
                android:src="@drawable/content_new"/>
    </LinearLayout>
</LinearLayout>