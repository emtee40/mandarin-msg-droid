<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" android:padding="14dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginBottom="14dp"
                >
            <QuickContactBadge
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:id="@+id/buddy_badge"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/ic_default_avatar"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_gravity="center_vertical"
                    android:paddingLeft="16dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vu Thi Thuy"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/buddy_nick" android:textStyle="bold"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="287564321"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/buddy_id"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center_vertical|right"
                    android:paddingRight="5dp">
                <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progress_bar"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:id="@+id/info_status_title"
                android:text="@string/info_status"
                style="?android:attr/listSeparatorTextViewStyle"
                android:visibility="gone"/>

        <LinearLayout
                android:id="@+id/info_status_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical"
                android:visibility="gone">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_icon" android:padding="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_text" android:paddingTop="5dp" android:paddingRight="5dp"
                    android:paddingBottom="5dp"/>
        </LinearLayout>
        <TextView
                android:id="@+id/info_base_title"
                android:text="@string/info_base"
                style="?android:attr/listSeparatorTextViewStyle"
                android:visibility="gone"/>
        <LinearLayout
                android:id="@+id/base_info"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
            <include
                    android:id="@+id/friendly_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    layout="@layout/buddy_info_item"/>
            <include
                    android:id="@+id/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    layout="@layout/buddy_info_item"/>
            <include
                    android:id="@+id/last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    layout="@layout/buddy_info_item"/>
            <include
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    layout="@layout/buddy_info_item"/>
            <include
                    android:id="@+id/birth_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    layout="@layout/buddy_info_item"/>
            <include
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    layout="@layout/buddy_info_item"/>
        </LinearLayout>
        <TextView
                android:id="@+id/info_extended_title"
                android:text="@string/info_extended"
                style="?android:attr/listSeparatorTextViewStyle"
                android:visibility="gone"/>
        <LinearLayout
                android:id="@+id/base_info"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
            <include
                    android:id="@+id/children"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    layout="@layout/buddy_info_item"/>
            <include
                    android:id="@+id/smoking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    layout="@layout/buddy_info_item"/>
            <include
                    android:id="@+id/website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    layout="@layout/buddy_info_item"/>
            <include
                    android:id="@+id/about_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    layout="@layout/buddy_info_item"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>