    <style name="ActionBar.Holo.Light" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
    </style>
    <style name="ActionBar.Holo.Opaque" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle</item>
    </style>
    <style name="ActionBar.Holo.Opaque.Translucent" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/tint_color</item>
        <item name="android:titleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle</item>
    </style>
    <style name="Button.NavBar" parent="android:Widget.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/button_navbar_text</item>
        <item name="android:background">?attr/button_navbar_background</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="Button.Flat" parent="android:Widget.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>
    <style name="Button.Green" parent="Button.Flat">
        <item name="android:background">@drawable/green_button_selector</item>
    </style>
    <style name="Button.Blue" parent="Button.Flat">
        <item name="android:background">@drawable/blue_button_selector</item>
    </style>
    <style name="Button.Orange" parent="Button.Flat">
        <item name="android:background">@drawable/orange_button_selector</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Button.White" parent="Button.Flat">
        <item name="android:background">@drawable/white_button_selector</item>
        <item name="android:textColor">#454545</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Chat.Message" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">17sp</item>
        <item name="android:autoLink">all</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">?chat_text_color</item>
    </style>
    <style name="Theme.Mandarin.Intro" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBar.Holo.Opaque.Intro</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="ActionBar.Holo.Opaque.Intro" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:titleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle</item>
    </style>
    <style name="PhoneNumberBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_view_focused</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
