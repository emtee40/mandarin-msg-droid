<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="header_head_color" format="color|reference"/>
    <attr name="header_back_color" format="color|reference"/>
    <attr name="header_font_color" format="color|reference"/>
    <attr name="header_line_color" format="color|reference"/>
    <color name="background_action_bar">#FFFF9E16</color>
    <color name="background_split_action_bar">#FF555555</color>
    <color name="item_background_action_bar">#FFFFFFFF</color>
    <color name="chat_gradient_start">#FFDBDBDB</color>
    <color name="chat_gradient_end">#FFEDEDED</color>
    <color name="smiley_selected_background">#aabababa</color>
    <color name="smiley_selected_stroke">#aa888899</color>
    <color name="draft_indicator_color">#ff989898</color>
    <color name="unread_indicator_color">#ff5aa9dd</color>
    <color name="profile_panel_background">#EE232323</color>
    <color name="button_navbar_normal">#11000000</color>
    <color name="button_navbar_pressed">#55000000</color>
    <color name="separator_navbar">#44000000</color>
    <color name="connecting_status_filter">#88000000</color>
    <color name="status_title_color">#FFFAFAFA</color>
    <color name="status_message_color">#FFFAFAFA</color>
    <color name="account_nick_color">#FFFAFAFA</color>
    <style name="Theme.Mandarin.Light" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="header_head_color">#F0CCCCCC</item>
        <item name="header_back_color">#99CCCCCC</item>
        <item name="header_font_color">#AA000000</item>
        <item name="header_line_color">#E0CCCCCC</item>
    </style>
    <style name="Theme.Mandarin.Dark" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBar.Holo.Opaque</item>
    </style>
    <style name="ActionBar.Holo.Opaque" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle</item>

        <item name="header_head_color">#F0CCCCCC</item>
        <item name="header_back_color">#99CCCCCC</item>
        <item name="header_font_color">#AA000000</item>
        <item name="header_line_color">#E0CCCCCC</item>
    </style>
    <style name="Button.NavBar" parent="android:Widget.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ffdddddd</item>
        <item name="android:background">@drawable/button_navbar</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="Chat.Message" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">17sp</item>
        <item name="android:autoLink">web</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:singleLine">false</item>
    </style>
</resources>